<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
    <managed-bean>
		<managed-bean-name>registrationBean</managed-bean-name>
		<managed-bean-class>managedbeans.RegistrationBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<application>
        <resource-bundle>
            <base-name>managedbeans.messages</base-name>
            <var>messages</var>
        </resource-bundle>
    </application>
	<navigation-rule>
		<display-name>welcomePage.xhtml</display-name>
		<from-view-id>/welcomePage.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>register</from-outcome>
			<to-view-id>/register.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>welcomePage.xhtml</display-name>
		<from-view-id>/welcomePage.xhtml</from-view-id>
		<navigation-case>
			<to-view-id>/manageData.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>manageData.xhtml</display-name>
		<from-view-id>/manageData.xhtml</from-view-id>
		<navigation-case>
			<to-view-id>/addRestaurant.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>manageData.xhtml</display-name>
		<from-view-id>/manageData.xhtml</from-view-id>
		<navigation-case>
			<to-view-id>/manageMenus.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>
